<%= form_for :contact_message, html: {class: "contact100-form validate-form", id: "new_contact"} do |f| %>
  <span class="contact100-form-title">
    <%= t("form_title") %>
  </span>
  <span class='response_message'></span>
  <label class="label-input100" for="first-name"><%= t("form_fields.title.name") %></label>
  <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Type first name">
    <%= f.text_field :first_name, class: "input100", placeholder: "#{t('form_fields.place_holder.first_name')}" %>
    <span class="focus-input100"></span>
  </div>
  <div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="Type last name">
    <%= f.text_field :last_name, class: "input100", placeholder: "#{t('form_fields.place_holder.last_name')}" %>
    <span class="focus-input100"></span>
  </div>

  <label class="label-input100" for="email"><%= t("form_fields.title.email") %></label>
  <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
    <%= f.text_field :email, class: "input100", placeholder: "#{t('form_fields.place_holder.email')}" %>
    <span class="focus-input100"></span>
  </div>

  <label class="label-input100" for="phone"><%= t("form_fields.title.phone") %></label>
  <div class="wrap-input100">
    <%= f.text_field :phone, class: "input100", placeholder: "#{t('form_fields.place_holder.phone')}" %>
    <span class="focus-input100"></span>
  </div>

  <label class="label-input100" for="message"><%= t("form_fields.title.message") %></label>
  <div class="wrap-input100 validate-input" data-validate = "Message is required">
    <%= f.text_area :message, class: "input100", placeholder: "#{t('form_fields.place_holder.message')}" %>
    <span class="focus-input100"></span>
  </div>
  <%= f.hidden_field :locale, value: I18n.locale %>
  <div class="container-contact100-form-btn">
    <%= f.submit "#{t('form_fields.submit_button')}", class: "contact100-form-btn", data: { disable_with: false } %>
  </div>
<% end %>
<%= render 'contact_message_info' %>
